{% extends 'base.html.twig' %}

{% block body_id 'changes_show_for_project' %}


{% block main %}
    <h1>{{ 'title.changes_list'|trans }}</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col">{{ 'label.author'|trans }}</th>
            <th scope="col">{{ 'label.date'|trans }}</th>
            <th scope="col"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for change in changes %}
            <tr>
                <td><span class="label label-info">{{ change.type }}</span> {{ change.title }}</td>
                <td>{{ change.author }}</td>
                <td>{{ change.date.format('d.m.Y, H:i') }}</td>
                <td>
                    <span class="label label-primary"><a href="javascript:collapse('{{ change.id }}');"><i class="fa fa-arrow-down"></i></a></span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'no_entries_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="#" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-upload" aria-hidden="true"></i> {{ 'action.export'|trans }}
        </a>
    </div>
    {{ parent() }}
{% endblock %}
